<Application
    x:Class="PhotoStore.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PhotoStore"
    RequestedTheme="Light">
    <Application.Resources>
        <Style TargetType="Page" x:Key="PageSize">
            <Setter Property="Width" Value="1920">

            </Setter>
            <Setter Property="Height" Value="1080"></Setter>

        </Style>
        <Style TargetType="TextBlock" x:Key="HeadingStyle">
            <Setter Property="HorizontalAlignment" Value="Center">         
            </Setter>
            <Setter Property="FontSize" Value="35" ></Setter>
            <Setter Property="Foreground" Value="White"></Setter>
        </Style>
        <Style TargetType="Page" x:Key="ChildPages">
            <Setter Property="Height" Value="750"></Setter>
        </Style>
    </Application.Resources>

</Application>
